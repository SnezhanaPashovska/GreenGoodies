{% extends 'base.html.twig' %} {% block title %}Green Goodies | Mon Compte{%
endblock %} {% block body %}

<div class="account-container">
  <h1>Mon Compte</h1>
  <div class="account">
    <div class="orders">
      <p>Mes commandes</p>

      <div class="orders-list">
        <table>
          <thead>
            <tr>
              <th>N°</th>
              <th>Date</th>
              <th>Prix</th>
            </tr>
          </thead>
          <tbody>
            {% for order in pagination.items %}
            <tr>
              <td>{{ order.id }}</td>
              <td>{{ order.orderDate|date('d/m/Y') }}</td>
              <td>{{ order.totalAmount|number_format(2, ',', ' ') }} €</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        <!-- Pagination controls -->
        <div class="pagination">
          {{ knp_pagination_render(pagination) }}
        </div>
      </div>
    </div>
    <div class="content-api">
      <h2>Mon accès API</h2>
      <form action="" method="">
        <input
          type="submit"
          class="btn-connect"
          value="Activer mon accès API"
        />
      </form>
    </div>
    <div class="delete-account">
      <button class="btn-delete">Supprimer mon compte</button>
    </div>
  </div>
</div>
{% endblock %}
