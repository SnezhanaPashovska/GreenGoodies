{% extends 'base.html.twig' %}
{% block title %}Login
{% endblock %}


{% block body %}

	<div class="login-container">
		<div class="image-login">
			<img src="{{ asset('images/branch.svg') }}" class="image-reg" alt="Green Leaves">
		</div>
		<div class="subscription-form">
			<h1>Connexion</h1>

			{% if error %}
				<div class="error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}


			<div class="form">
				<form action="{{ path('app_login') }}" method="post">
					<div class="form-group">
						<label for="email">Email :</label>
						<input type="email" id="email" name="email" value="{{ email|default('') }}">
					</div>
					<div class="form-group">
						<label for="password">Mot de passe :</label>
						<input type="password" id="password" name="password">
					</div>
					
					<button type="submit" class="button-continue">Se connecter</button>
				</div>

				<div class="register-account">
					<a href="{{ path('app_register') }}">Pas encore de compte ? Sâ€™inscrire</a>
				</div>
			</div>
		</div>

	{% endblock %}